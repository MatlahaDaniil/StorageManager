<Window x:Class="StorageManager.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageManager.Windows"
        mc:Ignorable="d"
        Title="CustomMessageBox" 
        MaxHeight="250"
        MaxWidth="700"
        MinHeight="250"
        MinWidth="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Border x:Name="MainBorder" 
        CornerRadius="50"
        Grid.RowSpan="2"
        Background="#26383F"
        BorderThickness="3"
        BorderBrush="White">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Height="50">
                    <Image Source="/Resources/StorageManager.png"
                           Width="25"
                           Height="25"
                           Margin="30 -20 0 0"/>
                    <TextBlock Style="{StaticResource BoldWhiteTextStyle}"
                               Text="StorageManager-Інформація"
                               Margin="5 -15 0 0"
                               FontSize="15"
                               Height="20"/>
                </StackPanel>
                
                <Button Click="CloseButton_Click"
                            Style="{StaticResource ResourceKey=ControlButtons}"
                            Margin="0 15 15 40"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <Image x:Name="closeImg"
                               Source="/Resources/Close.png"/>
                </Button>

                <TextBlock x:Name="Message_txb"
                           Style="{StaticResource BoldWhiteTextStyle}"
                           VerticalAlignment="Center" 
                           Margin="15"
                           FontSize="25"
                           Height="110"/>


                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom">
                    <Button x:Name="Ok_btn"
                            Margin="0 0 30 10"
                            Click="Ok_btn_Click"
                            Width="150"
                            Height="30"
                            FontWeight="Bold"
                            Style="{StaticResource btn_ForStyleTestManager}"
                            Content="Oк">
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
